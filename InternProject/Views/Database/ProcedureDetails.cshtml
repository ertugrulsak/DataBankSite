@model List<Microsoft.Data.SqlClient.SqlParameter>

@using System.Data

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.ProcedureName in @ViewBag.DatabaseName</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>@ViewBag.ProcedureName in @ViewBag.DatabaseName</h2>
        @if (Model != null && Model.Any())
        {
            <form asp-action="ProcedureDetails" method="post">
                <input type="hidden" name="databaseName" value="@ViewBag.DatabaseName" />
                <input type="hidden" name="procedureName" value="@ViewBag.ProcedureName" />

                @foreach (var param in Model)
                {
                    @if (param.Direction != System.Data.ParameterDirection.ReturnValue)
                    {
                        <div class="form-group">
                            <label for="@param.ParameterName">@param.ParameterName</label>
                            <input type="text" class="form-control" name="parameters[@param.ParameterName]" value="@param.Value" "" />
                        </div>
                    }
                }

                <button type="submit" class="btn btn-primary">Execute</button>
            </form>
        }
        <a href="@Url.Action("Procedures", "Database", new { databaseName = ViewBag.DatabaseName })" class="btn btn-secondary mt-3">Back to Procedures</a>
    </div>
</body>
</html>
